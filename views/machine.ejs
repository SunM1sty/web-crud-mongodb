<!--include header-->
<%- include('include/_header') %>
<!--/include header-->

<main id="main-content">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-machine" class="border-shadow">
                <span class="text-gradient">New Machine <i class="fa-solid fa-computer-classic"></i></span>
            </a>
            <a href="/" class="border-shadow">
                <span class="text-gradient">Back to Main Page<i class="fa-solid fa-computer-classic"></i></span>
            </a>
        </div>

        <!--crud form-->
        <form action="/" method="post">
            <table class="table-type-machine">
                <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Date Issue</th>
                    <th>TypeMachine.Country</th>
                    <th>TypeMachine.Brand</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < machines.length; i++) {%>
                    <tr>
                        <td> <%= i + 1%> </td>
                        <td> <%= machines[i].dateIssue %> </td>
                        <td> <%= machines[i].typeMachine.country %> </td>
                        <td> <%= machines[i].typeMachine.brand %> </td>
                        <td>
                            <a href="/update-machine?id=<%= machines[i]._id%>" class="btn border-shadow update-machine">
                                <span class="text-gradient">Edit</span>
                            </a>
                            <a class="btn border-shadow delete-machine" data-id=<%= machines[i]._id %> >
                                <span class="text-gradient">Delete</span>
                            </a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </form>
        <!--/crud form-->
    </div>
</main>

<!--include footer-->
<%- include('include/_footer') %>
<!--/include footer-->