<!--include header-->
<%- include('include/_header') %>
<!--/include header-->

<main id="main-content">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter box-nav d-flex justify-between">
                <a href="/type-machine" class="border-shadow"><i class="fa-solid fa-arrow-left"></i> All Types Machine</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Type Machine</h2>
            <span class="text-light">Use the form to update a Type Machine</span>
        </div>

        <!--crud form-->
        <form method="post" id="update_type_machine">
            <div class="new_type_machine">
                <div class="form-group">
                    <label for="country" class="text-light">Country</label>
                    <input type="hidden" name="id" value="<%= typeMachines._id %>">
                    <input type="text" name="country" value="<%= typeMachines.country %>" placeholder="Enter a country">
                </div>
                <div class="form-group">
                    <label for="brand" class="text-light">Brand</label>
                    <input type="text" name="brand" value="<%= typeMachines.brand %>" placeholder="Enter a brand">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>
        <!--/crud form-->
    </div>
</main>

<!--include footer-->
<%- include('include/_footer') %>
<!--/include footer-->